<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_black_36"
        />
    <LinearLayout
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shippingCartText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/shippingCartListView"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:text="@string/myCart"
            android:textSize="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"></View>

        <!--<RelativeLayout
            android:id="@+id/relativeCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/emptyCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/emptyCart"
                android:textSize="30dp"
                android:visibility="gone"></TextView>
        </RelativeLayout>-->

        <ListView
            android:id="@+id/shippingCartListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/shippingCartListView"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:divider="@color/white"
            android:dividerHeight="0dp"></ListView>

    </LinearLayout>
</RelativeLayout>
