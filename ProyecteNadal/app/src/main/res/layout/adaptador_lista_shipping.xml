<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="30dp"
    android:paddingTop="20dp"
    android:paddingRight="30dp"

    tools:context=".adapters.AdaptadorPedidos">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="105dp"
        android:background="@drawable/custom_shipping_items"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/white"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/pedidoFotoShipping"
                android:layout_width="100dp"
                android:layout_height="100dp"

                tools:src="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreProductoShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/names"
                android:textColor="@color/black"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/precioProductoShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="precioProducto"></TextView>
            <TextView
                android:id="@+id/priceFinalShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"></TextView>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:id="@+id/addOneToCart"
                    android:background="@color/fui_transparent"
                    android:text="+"></Button>

                <TextView
                    android:id="@+id/cantidadProductoShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"></TextView>
                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/removeOneToCart"
                    android:gravity="center"
                    android:background="@color/fui_transparent"
                    android:text="-"></Button>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>